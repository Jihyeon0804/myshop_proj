<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myshop.user.mapper.UserMapper">
	<select id="selectUserList" resultType="map">
		select * from `user`;
	</select>
	
	<select id="selectUserCountByLoginId" resultType="int">
		SELECT
			COUNT(*)
		FROM 
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<select id="existUserByLoginIdAndPassword" parameterType="map" resultType="int">
		SELECT
			COUNT(*)
		FROM 
			`user`
		WHERE
			`loginId` = #{loginId} AND `password` = #{password}
	</select>
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`,
			`password`,
			`name`,
			`email`,
			`phoneNumber`,
			`birth`,
			`createdAt`,
			`updatedAt`
		)
		VALUES
		(
			#{loginId},
			#{password},
			#{name},
			#{email},
			#{phoneNumber},
			#{birth},
			NOW(),
			NOW()
		)
	</insert>
</mapper>